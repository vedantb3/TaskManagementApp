<% provide(:title, 'Edit Task') %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h2>Edit Task</h2>
        </div>
        <div class="card-body">
          <%= form_with model: @task, local: true, method: :patch, data: { turbo: false } do |form| %>
            <% if @task.errors.any? %>
              <div id="error_explanation">
                <h5><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:<h5>
                <ul>
                  <% @task.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= form.label :title %>
              <%= form.text_field :title, autofocus: true, class: "form-control", placeholder: "Task Title" %>
            </div><br>

            <div class="form-group">
              <%= form.label :description %>
              <%= form.rich_text_area :description, class: "form-control", placeholder: "Task Description", rows: 4 %>
            </div><br>

            <div class="form-group">
              <%= form.label :state %>
              <%= form.select :state, Task.states.keys.map { |state| [state.humanize, state] }, { prompt: "Select State" }, class: "form-control" %>
            </div><br>

            <div class="form-group">
              <%= form.label :deadline %>
              <%= form.datetime_field :deadline, class: "form-control", placeholder: "Select Deadline" %>
            </div>

            <div class="form-group">
              <%= form.submit 'Update Task', class: "btn btn-primary btn-block smt-btn" %>
            </div>
          <% end %>

          <%= link_to 'Back', root_path, class: "btn btn-secondary btn-block back-btn" %>
        </div>
      </div>
    </div>
  </div>
</div>